extends ./../pug_includes/main

block variables
    - var headerClass = ' mb-0 mb-sm-4 heading-margin'
    - var mainPage = false
    - var footerClass = ' footer-fixed mt-5'
    - var bodyClass = 'd-flex flex-column bg-custom'

block prepend head
    title Log In Form

block prepend content
    main
        .container
            .row.justify-content-center
                .text-center.text-light.bg-custom.border.border-light.col-sm-8.col-md-6.p-sm-4.p-2
                    h2.text-info Log in
                    p Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aspernatur beatae dolore...
                    form.col-10.mx-auto
                        input.form-control.mb-3(type='email' placeholder='Email')
                        input.form-control.mb-3(type='password' placeholder='Password')
                        button.btn.btn-outline-info.btn-block.mb-3 Log In
                        a.text-secondary.small(href='#') Forgot your password?